---
/**
 * Posts List Page
 * 
 * Displays all blog posts with card style.
 */
import { getCollection } from 'astro:content'
import BaseLayout from '@/layouts/BaseLayout.astro'
import PostCard from '@/components/PostCard.astro'

const allPosts = await getCollection('posts', ({ data }) => !data.draft)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
)
---

<BaseLayout title="全部文章" description="浏览所有博客文章。">
  <div class="container">
    <header class="page-header">
      <h1 class="page-title">全部文章</h1>
      <p class="page-description">
        共 {sortedPosts.length} 篇文章
      </p>
    </header>

    {sortedPosts.length > 0 ? (
      <div class="posts-list content-width">
        {sortedPosts.map((post) => (
          <PostCard
            slug={post.id}
            title={post.data.title}
            date={post.data.date}
            updatedDate={post.data.updatedDate}
            summary={post.data.summary}
            tags={post.data.tags}
            isPinned={false}
            group={post.data.group}
          />
        ))}
      </div>
    ) : (
      <p class="no-posts content-width">暂无文章，敬请期待！</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
    padding-top: var(--space-8);
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-bottom: var(--space-8);
  }

  .no-posts {
    color: var(--color-fg-muted);
    font-style: italic;
    text-align: center;
  }
</style>
