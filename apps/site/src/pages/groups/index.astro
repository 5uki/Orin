---
/**
 * Groups Index Page (L1 Entry Layer)
 *
 * Displays all groups with post counts.
 *
 * Delegates data fetching to Coordinator Layer (L2).
 *
 * Requirements: 2.1, 2.3, 2.4
 */
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllGroupsWithCounts, groupToSlug } from '@/coordinators';

// Delegate data fetching to coordinator
const groupCounts = await getAllGroupsWithCounts();

// Sort groups alphabetically for display
const sortedGroups = [...groupCounts].sort((a, b) => a[0].localeCompare(b[0]));

// Count ungrouped posts
const allPosts = await getCollection('posts', ({ data }) => !data.draft);
const ungroupedCount = allPosts.filter((p) => !p.data.group).length;
---

<BaseLayout title="分组" description="浏览所有文章分组。">
  <div class="container">
    <header class="page-header">
      <a href="/" class="back-link">← 返回首页</a>
      <h1 class="page-title">分组</h1>
      <p class="page-description">
        共 {sortedGroups.length} 个分组
      </p>
    </header>

    {sortedGroups.length > 0 ? (
      <div class="groups-grid content-width">
        {sortedGroups.map(([group, count]) => (
          <a href={`/groups/${groupToSlug(group)}`} class="group-card">
            <span class="group-name">{group}</span>
            <span class="group-count">{count} 篇文章</span>
          </a>
        ))}
      </div>
    ) : (
      <p class="no-groups content-width">暂无分组。</p>
    )}

    {ungroupedCount > 0 && (
      <p class="ungrouped-info content-width">
        另有 {ungroupedCount} 篇文章未分组
      </p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .groups-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .group-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    padding: var(--space-4);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: background-color var(--transition-fast), transform var(--transition-fast);
    border-left: 3px solid var(--color-accent);
  }

  .group-card:hover {
    background-color: var(--color-bg-tertiary);
    transform: translateY(-2px);
  }

  .group-name {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--color-fg);
  }

  .group-count {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
  }

  .no-groups {
    color: var(--color-fg-muted);
    font-style: italic;
    text-align: center;
  }

  .ungrouped-info {
    margin-top: var(--space-6);
    text-align: center;
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
  }
</style>
