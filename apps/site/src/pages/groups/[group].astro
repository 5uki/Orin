---
/**
 * Group Detail Page (L1 Entry Layer)
 *
 * Displays all posts in a specific group.
 *
 * Delegates data fetching to Coordinator Layer (L2).
 * Delegates UI composition to Molecular Layer (L3).
 *
 * Requirements: 2.1, 2.3, 2.4
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getGroupStaticPaths, getGroupPageData } from '@/coordinators';
import PostCard from '@/molecules/post/PostCard.astro';

// Delegate static path generation to coordinator
export async function getStaticPaths() {
  return getGroupStaticPaths();
}

const { group, posts } = Astro.props;

// Delegate data processing to coordinator
const { displayName, posts: postData, totalPosts } = getGroupPageData(group, posts);
---

<BaseLayout title={`分组: ${displayName}`} description={`${displayName} 分组下的所有文章。`}>
  <div class="container">
    <header class="page-header">
      <a href="/groups" class="back-link">← 所有分组</a>
      <h1 class="page-title">
        <span class="group-label">分组:</span> {displayName}
      </h1>
      <p class="page-description">
        共 {totalPosts} 篇文章
      </p>
    </header>

    {postData.length > 0 ? (
      <div class="posts-list content-width">
        {postData.map((post) => (
          <PostCard
            slug={post.id}
            title={post.title}
            date={post.date}
            summary={post.summary}
            tags={post.tags}
            group={post.group}
          />
        ))}
      </div>
    ) : (
      <p class="no-posts content-width">暂无此分组的文章。</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .group-label {
    color: var(--color-fg-muted);
    font-weight: var(--font-normal);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
  }

  .no-posts {
    color: var(--color-fg-muted);
    font-style: italic;
    text-align: center;
  }
</style>
