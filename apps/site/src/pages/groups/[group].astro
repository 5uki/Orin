---
import { getCollection } from 'astro:content'
import BaseLayout from '@/layouts/BaseLayout.astro'
import PostCard from '@/components/PostCard.astro'
import { groupToSlug } from '@/utils/group'

export async function getStaticPaths() {
  const allPosts = await getCollection('posts', ({ data }) => !data.draft)

  // Collect all unique groups
  const groups = new Set<string>()
  for (const post of allPosts) {
    if (post.data.group) {
      groups.add(post.data.group)
    }
  }

  return [...groups].map((group) => ({
    params: { group: groupToSlug(group) },
    props: {
      group,
      posts: allPosts
        .filter((post) => post.data.group === group)
        .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()),
    },
  }))
}

const { group, posts } = Astro.props
---

<BaseLayout title={`分组: ${group}`} description={`${group} 分组下的所有文章。`}>
  <div class="container">
    <header class="page-header">
      <a href="/" class="back-link">← 所有分组</a>
      <h1 class="page-title">
        <span class="group-label">分组:</span> {group}
      </h1>
      <p class="page-description">
        共 {posts.length} 篇文章
      </p>
    </header>

    {posts.length > 0 ? (
      <div class="posts-list content-width">
        {posts.map((post) => (
          <PostCard
            slug={post.id}
            title={post.data.title}
            date={post.data.date}
            summary={post.data.summary}
            tags={post.data.tags}
            group={post.data.group}
          />
        ))}
      </div>
    ) : (
      <p class="no-posts content-width">暂无此分组的文章。</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .group-label {
    color: var(--color-fg-muted);
    font-weight: var(--font-normal);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
  }

  .no-posts {
    color: var(--color-fg-muted);
    font-style: italic;
    text-align: center;
  }
</style>
