---
/**
 * Tag Detail Page (L1 Entry Layer)
 *
 * Displays all posts with a specific tag.
 *
 * Delegates data fetching to Coordinator Layer (L2).
 * Delegates UI composition to Molecular Layer (L3).
 *
 * Requirements: 2.1, 2.3, 2.4
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getTagStaticPaths, getTagPageData } from '@/coordinators';
import PostCard from '@/molecules/post/PostCard.astro';

// Delegate static path generation to coordinator
export async function getStaticPaths() {
  return getTagStaticPaths();
}

const { tag, posts } = Astro.props;

// Delegate data processing to coordinator
const { posts: postData, totalPosts } = getTagPageData(tag, posts);
---

<BaseLayout title={`标签: ${tag}`} description={`所有标记为 ${tag} 的文章。`}>
  <div class="container">
    <header class="page-header">
      <a href="/tags" class="back-link">← 所有标签</a>
      <h1 class="page-title">
        <span class="tag-label">标签:</span> {tag}
      </h1>
      <p class="page-description">
        共 {totalPosts} 篇文章
      </p>
    </header>

    {postData.length > 0 ? (
      <div class="posts-list content-width">
        {postData.map((post) => (
          <PostCard
            slug={post.id}
            title={post.title}
            date={post.date}
            summary={post.summary}
            tags={post.tags}
          />
        ))}
      </div>
    ) : (
      <p class="no-posts content-width">暂无此标签的文章。</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .tag-label {
    color: var(--color-fg-muted);
    font-weight: var(--font-normal);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
  }

  .no-posts {
    color: var(--color-fg-muted);
    font-style: italic;
    text-align: center;
  }
</style>
