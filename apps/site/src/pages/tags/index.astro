---
/**
 * Tags Index Page (L1 Entry Layer)
 *
 * Displays all tags with post counts.
 *
 * Delegates data fetching to Coordinator Layer (L2).
 *
 * Requirements: 2.1, 2.3, 2.4
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllTagsWithCounts, tagToSlug } from '@/coordinators';

// Delegate data fetching to coordinator
const tagCounts = await getAllTagsWithCounts();

// Sort tags alphabetically for display
const sortedTags = [...tagCounts].sort((a, b) => a[0].localeCompare(b[0]));
---

<BaseLayout title="标签" description="浏览所有标签。">
  <div class="container">
    <header class="page-header">
      <a href="/" class="back-link">← 返回首页</a>
      <h1 class="page-title">标签</h1>
      <p class="page-description">
        共 {sortedTags.length} 个标签
      </p>
    </header>

    {sortedTags.length > 0 ? (
      <div class="tags-grid content-width">
        {sortedTags.map(([tag, count]) => (
          <a href={`/tags/${tagToSlug(tag)}`} class="tag-card">
            <span class="tag-name">{tag}</span>
            <span class="tag-count">{count} 篇文章</span>
          </a>
        ))}
      </div>
    ) : (
      <p class="no-tags content-width">暂无标签。</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .tags-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .tag-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    padding: var(--space-4);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: background-color var(--transition-fast), transform var(--transition-fast);
  }

  .tag-card:hover {
    background-color: var(--color-bg-tertiary);
    transform: translateY(-2px);
  }

  .tag-name {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--color-fg);
  }

  .tag-count {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
  }

  .no-tags {
    color: var(--color-fg-muted);
    font-style: italic;
    text-align: center;
  }
</style>
