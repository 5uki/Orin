---
/**
 * Sidebar Component
 * 
 * Displays blog owner information including avatar, name, and description.
 * Used in the homepage layout (1/4 width on desktop, stacked on mobile).
 * 
 * Requirements: 2.2, 2.3, 2.4
 */

interface Props {
  avatar?: string
  name?: string
  description?: string
  class?: string
}

const { 
  avatar = '/favicon.svg',
  name = 'Orin Blog',
  description = '欢迎来到我的博客',
  class: className
} = Astro.props

---

<aside class:list={['sidebar', className]}>
  <div class="sidebar-content">
    <!-- 头像 -->
    <div class="avatar-wrapper">
      <img 
        src={avatar} 
        alt={`${name}的头像`}
        class="avatar"
        id="sidebar-avatar"
        width="120"
        height="120"
        loading="lazy"
      />
    </div>
    
    <!-- 名称 -->
    <h2 class="owner-name" id="sidebar-name">{name}</h2>
    
    <!-- 描述 -->
    {description && (
      <p class="owner-description" id="sidebar-description">{description}</p>
    )}
  </div>
</aside>


<style>
  .sidebar {
    align-self: start;
    position: sticky;
    top: calc(var(--header-height) + var(--space-6));
  }

  @media (min-width: 1024px) {
    .sidebar.home-sidebar {
      position: fixed;
      top: var(--home-sidebar-top);
      left: var(--home-sidebar-left);
      width: var(--home-sidebar-width);
      height: calc(100vh - var(--home-sidebar-top) - var(--space-4));
    }

    .sidebar.home-sidebar .sidebar-content {
      height: 100%;
    }
  }

  .sidebar-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-8);
    background: linear-gradient(160deg, #ffffff 0%, #f8fafc 40%, #eef2ff 100%);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(59, 130, 246, 0.15);
    box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12);
    overflow: hidden;
  }

  :global(.dark) .sidebar-content {
    background: linear-gradient(160deg, #1f2937 0%, #111827 45%, #1e1b4b 100%);
    border: 1px solid rgba(148, 163, 184, 0.18);
    box-shadow: 0 18px 40px rgba(2, 6, 23, 0.5);
  }

  .sidebar-content::before {
    content: '';
    position: absolute;
    top: 16px;
    left: 16px;
    right: 16px;
    height: 86px;
    border-radius: var(--radius-lg);
    background: linear-gradient(120deg, rgba(59, 130, 246, 0.18), rgba(236, 72, 153, 0.18));
    pointer-events: none;
  }

  .sidebar-content::after {
    content: '';
    position: absolute;
    width: 220px;
    height: 220px;
    right: -80px;
    bottom: -120px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.22), transparent 70%);
    pointer-events: none;
  }

  .sidebar-content > * {
    position: relative;
    z-index: 1;
  }

  .avatar-wrapper {
    margin-bottom: var(--space-4);
  }

  .avatar {
    width: 120px;
    height: 120px;
    border-radius: var(--radius-full);
    object-fit: cover;
    border: 3px solid rgba(59, 130, 246, 0.35);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    box-shadow: 0 10px 24px rgba(59, 130, 246, 0.2);
  }

  .avatar:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
  }

  .owner-name {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    margin: 0 0 var(--space-3);
  }

  .owner-description {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* 响应式布局 - 移动端 */
  @media (max-width: 768px) {
    .sidebar {
      position: static;
    }

    .sidebar-content {
      padding: var(--space-6);
    }

    .avatar-wrapper {
      margin-bottom: 0;
      flex-shrink: 0;
    }

    .avatar {
      width: 80px;
      height: 80px;
    }

    .owner-name {
      font-size: var(--text-lg);
      margin-bottom: var(--space-2);
    }

    .owner-description {
      font-size: var(--text-sm);
    }
  }
</style>
