{
  "name": "orin",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm run build:shared && pnpm run build:apps && pnpm run build:pages",
    "build:shared": "pnpm --filter @orin/shared typecheck",
    "build:apps": "pnpm --filter @orin/site build && pnpm --filter @orin/admin build",
    "build:site": "pnpm --filter @orin/site build",
    "build:admin": "pnpm --filter @orin/admin build",
    "build:pages": "node scripts/build-pages.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest --run",
    "test:watch": "vitest",
    "db:migrate": "wrangler d1 execute orin-db --file=functions/db/schema.sql",
    "db:migrate:local": "wrangler d1 execute orin-db --local --file=functions/db/schema.sql",
    "db:migrate:remote": "wrangler d1 execute orin-db --remote --file=functions/db/schema.sql",
    "deploy": "pnpm run build && wrangler pages deploy dist",
    "deploy:preview": "pnpm run build && wrangler pages deploy dist --branch preview"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
